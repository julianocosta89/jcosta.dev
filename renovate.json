{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "groupName": "OpenTelemetry Collector Builder",
      "matchPackageNames": [
        "/^go\\.opentelemetry\\.io/collector//",
        "/^github\\.com/open-telemetry/opentelemetry-collector-contrib//",
        "/open-telemetry/opentelemetry-collector-releases/"
      ]
    },
    {
      "groupName": "Hugo",
      "matchPackageNames": [
        "gohugoio/hugo"
      ]
    }
  ],
  "ocb": {
    "enabled": true,
    "managerFilePatterns": [
      "content/posts/mastodon-otel/manifest.yaml"
    ],
    "bumpVersion": "minor"
  },
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update OpenTelemetry Collector Builder version in Dockerfile",
      "managerFilePatterns": [
        "/content/posts/mastodon-otel/Dockerfile/"
      ],
      "matchStrings": [
        "ARG BUILDER_VERSION=(?<currentValue>.*?)\\n"
      ],
      "depNameTemplate": "cmd/builder",
      "packageNameTemplate": "open-telemetry/opentelemetry-collector-releases",
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^cmd/builder/v(?<version>.*)$"
    },
    {
      "customType": "regex",
      "description": "Update Hugo version in github workflow and netlify config",
      "managerFilePatterns": [
        "/.github/workflows/hugo.yaml/",
        "/netlify.toml/"
      ],
      "matchStrings": [
        "HUGO_VERSION:? ?[=]? ?[\"']?(?<currentValue>.*?)[\"']?\\n"
      ],
      "packageNameTemplate": "gohugoio/hugo",
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^v(?<version>.*)$"
    }
  ]
}
